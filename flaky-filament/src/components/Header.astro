---
import { Image } from 'astro:assets';
---

<header class="relative py-16 overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-50/30 via-transparent to-secondary-50/30 dark:from-primary-900/30 dark:via-transparent dark:to-secondary-900/30"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[120%] h-[500px] bg-gradient-to-b from-primary-100/20 to-transparent dark:from-primary-900/20 rounded-[100%] blur-3xl transform -translate-y-1/2"></div>
  </div>

  <div class="max-w-4xl mx-auto px-4 text-center">
    <!-- Profile Image -->
    <div class="relative mx-auto w-40 h-40 mb-8 animate-scale-in">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-400 to-secondary-400 rounded-full blur-lg opacity-50 animate-pulse"></div>
      <img 
        src="/images/profile_picture.png" 
        alt="Profile Picture" 
        class="relative w-full h-full object-cover rounded-full border-4 border-white dark:border-gray-800 shadow-xl"
        style="animation: float 6s ease-in-out infinite;"
      />
      <!-- Decorative elements -->
      <div class="absolute -top-2 -right-2 w-6 h-6 bg-primary-400 rounded-full animate-ping"></div>
      <div class="absolute -bottom-1 -left-1 w-4 h-4 bg-secondary-400 rounded-full animate-pulse"></div>
    </div>

    <!-- Introduction -->
    <p class="text-lg mb-6 text-gray-600 dark:text-gray-300 font-inter animate-fade-in animate-delay-100">
      Hi, I'm <strong class="text-primary-600 dark:text-primary-400 font-semibold">dbsectrainer</strong>! 
      I'm passionate about building secure, scalable systems and sharing knowledge with the tech community.
    </p>

    <!-- Main Heading -->
    <h1 class="text-5xl font-bold mb-6 bg-gradient-to-r from-primary-600 to-secondary-600 dark:from-primary-400 dark:to-secondary-400 text-transparent bg-clip-text animate-fade-in animate-delay-200">
      Welcome to My Digital Universe!
    </h1>

    <!-- Subtitle -->
    <div class="flex flex-wrap justify-center gap-4 text-xl font-semibold text-gray-700 dark:text-gray-300 animate-fade-in animate-delay-300">
      <span class="flex items-center gap-2">
        <span class="text-2xl">ğŸš€</span>
        Full-Stack Developer & Technical Architect
      </span>
      <span class="flex items-center gap-2">
        <span class="text-2xl">ğŸ”</span>
        Security Expert
      </span>
      <span class="flex items-center gap-2">
        <span class="text-2xl">ğŸ¯</span>
        Solution Designer
      </span>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 animate-bounce">
      <div class="w-6 h-10 border-2 border-gray-400 dark:border-gray-600 rounded-full p-1">
        <div class="w-1.5 h-3 bg-gray-400 dark:bg-gray-600 rounded-full mx-auto animate-pulse"></div>
      </div>
    </div>
  </div>
</header>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  /* Enhance animation performance */
  img {
    backface-visibility: hidden;
    transform: translateZ(0);
    -webkit-font-smoothing: subpixel-antialiased;
  }
</style>
