  {
    title: "Global AI & Cloud Intelligence Dashboard",
    url: "https://github.com/dbsectrainer/ai_cloud_dashboard",
    emoji: "üåê",
    description: "A real-time analytics platform for monitoring and analyzing the global AI and cloud computing landscape.",
    features: [
      "Market intelligence, growth trends, and competitive analysis",
      "Security & compliance tracking, certification management",
      "Cost analysis, TCO calculator, and resource optimization",
      "Real-time performance monitoring and SLA tracking",
      "AI-powered decision support and future trends forecasting"
    ],
    techStack: {
      Frontend: "Streamlit",
      "Data Processing": "Python, Pandas, NumPy",
      Visualization: "Plotly",
      Architecture: "Modular, component-based design"
    },
    impact: [
      "Empowers enterprise decision-makers with actionable insights",
      "Supports compliance, cost optimization, and strategic planning",
      "Recognized in Cloud Computing Monthly and Streamlit Gallery"
    ]
  },
  {
    title: "Mandarin Pathways",
    url: "https://github.com/dbsectrainer/Mandarin-Pathways",
    demo: "https://dbsectrainer.github.io/Mandarin-Pathways/",
    emoji: "üà∫",
    description: "A focused Mandarin Chinese learning platform designed to take learners from foundational phrases to advanced professional fluency.",
    features: [
      "Modular 40-day curriculum with interactive audio-visual lessons",
      "YouTube API integration for embedded video demonstrations",
      "Canvas-based character writing practice",
      "Reading comprehension and vocabulary tools",
      "Progressive Web App (PWA) with offline access"
    ],
    techStack: {
      Frontend: "HTML5, CSS3, JavaScript",
      "Backend/Automation": "Python scripts",
      APIs: "YouTube Data API",
      PWA: "Service Worker, manifest.json",
      Audio: "Dual-language audio management"
    }
  },
  {
    title: "Enterprise Checklist Dashboard",
    url: "https://github.com/dbsectrainer/enterprise-grade-checklists",
    demo: "https://dbsectrainer.github.io/enterprise-grade-checklists/",
    emoji: "‚úÖ",
    description: "A unified dashboard for tracking progress across eight enterprise-grade checklists.",
    features: [
      "Centralized progress tracking and automated validation",
      "Compliance mapping for standards (HIPAA, SOC2, etc.)",
      "Real-time performance monitoring and optimization guides",
      "Visual architecture diagrams and state management"
    ],
    techStack: {
      Frontend: "HTML5, CSS3, JavaScript (ES6+)",
      State: "LocalStorage",
      Architecture: "Event-driven, Mermaid.js for diagrams"
    }
  }
