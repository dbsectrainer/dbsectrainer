---
import '../styles/global.css';
import DarkMode from '../components/DarkMode.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Full-Stack Developer & Technical Architect | Security Expert | Solution Designer" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#0ea5e9" media="(prefers-color-scheme: light)">
    <meta name="theme-color" content="#0c4a6e" media="(prefers-color-scheme: dark)">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen selection:bg-primary-200 dark:selection:bg-primary-800 selection:text-primary-900 dark:selection:text-primary-100">
    <!-- Background Pattern -->
    <div class="fixed inset-0 -z-50 overflow-hidden pointer-events-none">
      <div class="absolute inset-0 bg-grid-primary-900/[0.02] dark:bg-grid-primary-100/[0.02] bg-[size:20px_20px]"></div>
      <div class="absolute inset-0 bg-gradient-to-br from-primary-50/50 via-transparent to-secondary-50/50 dark:from-primary-950/50 dark:via-transparent dark:to-secondary-950/50 backdrop-blur-3xl"></div>
    </div>

    <!-- Dark Mode Toggle -->
    <div class="fixed top-4 right-4 z-50">
      <DarkMode />
    </div>

    <!-- Main Content -->
    <div class="relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 lg:py-16">
        <main class="prose prose-lg dark:prose-invert max-w-none">
          <slot />
        </main>
      </div>
    </div>

    <!-- Grain Effect -->
    <div class="fixed inset-0 -z-40 opacity-20 pointer-events-none">
      <div class="absolute inset-0 bg-noise"></div>
    </div>
  </body>
</html>

<style>
  /* Grid Pattern */
  .bg-grid-primary-900 {
    background-image: linear-gradient(currentColor 1px, transparent 1px),
      linear-gradient(to right, currentColor 1px, transparent 1px);
  }

  .bg-grid-primary-100 {
    background-image: linear-gradient(currentColor 1px, transparent 1px),
      linear-gradient(to right, currentColor 1px, transparent 1px);
  }

  /* Noise Effect */
  .bg-noise {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.4;
  }

  /* Enhance text selection */
  ::selection {
    text-shadow: none;
  }
</style>
